<h1>Friends</h1>

<div class="search-area mt-5">
  <h3>Search Friends</h3>
  <%= form_with(url: search_friend_path, method: :get, local: false) do |f| %>
    <div class="form-group row">
      <div class="col-9 pr-0">
        <%= f.text_field :friend, placeholder: "Enter friend's name or email", autofocus: true, class: "form-control form-control lg" %>
      </div>
      <div class="col-3 pl-0">
        <%= f.button class: "btn btn-success" do %>
          <%= fa_icon "search" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<% if !@friends.empty? %>
  <%= render 'friends/list' %>
<% end %>